	insteadOf = sact-master:

[url "ssh://git.rd.securactive.lan/srv/git"]
	insteadOf = sact-ssl:

[url "git://git.rd.securactive.lan"]
	insteadOf = sact:

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	tool = kdiff3
	conflictstyle = diff3
[push]
	default = tracking
